{
    "compilerOptions": {
        /* Basic Options */
        "target": "ES2017",
        "module": "CommonJS",

        /* Type Checking*/
        "strict": true,

        /* Module Resolution Options */
        "esModuleInterop": true,
        "moduleResolution": "Node",

        /* Advanced Options */
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        /* Emit Options */
        "outDir": "./build"
      },
      "include": ["./src"],
      "exclude": ["node_modules"]
}
